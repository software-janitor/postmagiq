# Orchestrator Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================
POSTGRES_PASSWORD=orchestrator_dev

# =============================================================================
# Security
# =============================================================================
# JWT secret for token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-jwt-secret-change-in-production

# =============================================================================
# Stripe Billing (Optional - required for payments)
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# Email (Optional - required for invites/password reset)
# =============================================================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=Postmagiq

# =============================================================================
# App Settings
# =============================================================================
# Base URL for email links
APP_BASE_URL=http://localhost:5173

# =============================================================================
# Workflow Configuration
# =============================================================================
# Deployment environment for workflow config filtering
# Options: development, staging, production
# This controls which workflow configs are synced from registry.yaml
DEPLOYMENT_ENV=development

# =============================================================================
# API Keys (Optional - for API-based agents)
# =============================================================================
# Groq API key for Groq agents (fast inference)
GROQ_API_KEY=gsk_...

# Anthropic API key for Claude agents
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key for GPT agents
OPENAI_API_KEY=sk-...

# Google API key for Gemini agents
GOOGLE_API_KEY=...

# =============================================================================
# Developer Mode
# =============================================================================
# Enable dev mode to see full LLM requests/responses in the GUI console
# Also writes detailed logs to workflow/runs/{run_id}/dev_logs/
POSTMAGIQ_DEV_MODE=false
